    <Switch
        android:id="@+id/cache_switcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|clip_horizontal|center_vertical"
        android:textOff="@string/noCaching"
        android:textOn="@string/yesCaching" />


</android.support.v7.widget.Toolbar>